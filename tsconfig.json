{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["node", "cypress", "@shelex/cypress-allure-plugin"],
    "module": "NodeNext",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib/cjs/",
    "resolveJsonModule": true
  },
  "include": ["cypress/**/*.ts", "cypress/**/*.tsx", "cypress/**/*.cy.tsx"],
  "exclude": ["cypress/examples", "node_modules", "lib"]
}
